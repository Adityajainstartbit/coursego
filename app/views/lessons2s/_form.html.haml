-# frozen_string_literal: true
= simple_form_for(@lessons2) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :title
    = f.input :content
    = f.association :courses

  .form-actions
    = f.button :submit
