
%h1 course
   
.form-inline.mb-3

  = search_form_for @ransack_courses, as: :courses_search, url: courses_path do |f|
    = f.search_field :title_cont,placeholder: 'enter a title',class:'form-control'
    = f.search_field :description_cont,placeholder: 'enter a description',class:'form-control'
    = f.search_field :short_description_cont,placeholder: 'enter a short descriptiondescription',class:'form-control'
    = f.search_field :language_cont,placeholder: 'enter a language',class:'form-control'

    = f.submit class:"btn btn-success"
    


  .ml-2

  = link_to '', courses_path,class:' fa fa-refresh fa-2x text-danger'


.card-columns
  -@courses.each do |course|
    =render 'courses/course', course: course

%table.table
  %thead
    %tr
      %th Title
      %th Description
      %th
      %th
      %th

  %tbody
    - @courses.each do |course|
      %tr
        %td= course.title
        %td= course.description
        %td= course.avatar.attached?
        %td= link_to 'Show', course,class: 'btn btn-success '
        %td= link_to 'Edit', edit_course_path(course) ,class: 'btn btn-success '
        %td= link_to 'Destroy', course ,class: 'btn btn-success ', method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Course', new_course_path ,class: 'btn btn-success .fa.fa.book '
